# Chatterbox TTS API Configuration
# Copy this file to .env and modify as needed

# Server Settings
CHATTERBOX_HOST=0.0.0.0
CHATTERBOX_PORT=8000

# Model Settings
CHATTERBOX_DEFAULT_MODEL=turbo
# Preload models on startup (comma-separated): turbo,multilingual,original
CHATTERBOX_PRELOAD_MODELS=

# Device Settings (auto-detected if not set)
# Options: cuda, mps, cpu
CHATTERBOX_DEVICE=

# Audio Settings
CHATTERBOX_MAX_TEXT_LENGTH=5000
CHATTERBOX_OUTPUT_FORMAT=wav

# CORS Settings (for production, specify allowed origins)
# CHATTERBOX_ALLOW_ORIGINS=["https://yourdomain.com"]

# Hugging Face Token (REQUIRED for model downloads)
# Get your token from: https://huggingface.co/settings/tokens
# Create a token with 'read' access and paste it below
HF_TOKEN=your_hf_token_here
